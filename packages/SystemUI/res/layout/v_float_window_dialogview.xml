<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="horizontal">
    <RelativeLayout
            android:id="@+id/apps_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#00000000"
            >
    <Button
            android:id="@+id/top_left"
            android:layout_width="130dip"
            android:layout_height="130dip"
            android:background="@drawable/float_window_top_left"
            android:textSize="15dip"
            android:paddingTop="25dip"
            android:paddingBottom="25dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            />
    <Button
            android:id="@+id/top_right"
            android:layout_width="130dip"
            android:layout_height="130dip"
            android:background="@drawable/float_window_top_right"
            android:textSize="15dip"
            android:paddingTop="25dip"
            android:paddingBottom="25dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/top_left"
            android:layout_margin="5dip"
            />
    <Button
            android:id="@+id/bottom_left"
            android:layout_width="130dip"
            android:layout_height="130dip"
            android:background="@drawable/float_window_bottom_left"
            android:textSize="15dip"
            android:paddingTop="25dip"
            android:paddingBottom="25dip"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/top_left"
            android:layout_margin="5dip"
            />
    <Button
            android:id="@+id/bottom_right"
            android:layout_width="130dip"
            android:layout_height="130dip"
            android:background="@drawable/float_window_bottom_right"
            android:textSize="15dip"
            android:paddingTop="25dip"
            android:paddingBottom="25dip"
            android:layout_below="@id/top_left"
            android:layout_toRightOf="@id/bottom_left"
            android:layout_margin="5dip"
            />
    <Button
            android:id="@+id/switch_apps"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="15dip"
            android:gravity="center"
            android:background="@drawable/v_float_window_button_background"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>
